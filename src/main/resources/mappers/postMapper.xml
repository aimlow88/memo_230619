<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.memo.post.mapper.PostMapper">
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.memo.post.domain.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 	</select>
 	
 	<insert id="insertPost" parameterType="com.memo.post.domain.Post">
 		INSERT INTO `post`
 			(
				`userId`
				,`subject`
				,`content`
				,`imagePath`
				,`createdAt`
				,`updatedAt`
 			)
 		VALUES
 			(
 				#{userId}
 				, #{subject}
 				, #{content}
 				, #{imagePath}
 				, NOW()
 				, NOW()
 			)
 	</insert>
 	
 	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.memo.post.domain.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE
 			`userId` = #{userId}
 		AND
 			`id` = #{postId}
 	
 	</select>
 	
 	<update id="upadtePostByPostIdUserId" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			<!-- imagePath가 있을 때에만 수정 -->
 			<if test="imagePath != null">
 			, `imagePath` = #{imagePath}
 			</if>
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{postId}
 		AND
 			`userId` = #{userId}
 	</update>
 	
 	<delete id="deletePostByPostIdOrUserId" parameterType="map">
 		DELETE
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 		<if test="userId != null">
 		AND
 			`userId` = #{userId}
 		</if>
 	</delete>
 
 </mapper>